<!DOCTYPE html>
<html>
<head>
  {{#with data}}
    {{{ block 'title' }}}

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="/bootstrap5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bootstrap-icons/font/bootstrap-icons.css">

    <link rel="stylesheet" href="/css/loader.css">
    <link rel="stylesheet" href="/css/navbar.css">
    {{{ block 'css' }}}
  </head>

  <body>
    <div class="loading-wrapper">
      <div class="loader-wrapper">
        <div class="loader"></div>

        <div class="loader-text-wrapper">
          <div class="loader-text">資</div>
          <div class="loader-text">料</div>
          <div class="loader-text">上</div>
          <div class="loader-text">傳</div>
          <div class="loader-text">中</div>
          <div class="loader-text">.</div>
          <div class="loader-text">.</div>
          <div class="loader-text">.</div>
        </div>
      </div>
    </div>

    <span id="is-auth" style="display: none;">{{ isAuth }}</span>
    <script src="/js/toBoolean.js"></script>
    <script src="/js/admin.js"></script>

    <nav class="navbar navbar-expand-md navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="https://nzgcc.com/">高雄NewOne靈糧堂</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="d-flex align-items-center navbar-nav">
            <li class="nav-item mt-4 mt-md-0">
              <a class="nav-link" href="/admin/rooms/audit">審核系統</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/rooms/list">教室列表</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/rooms/time/add">新增時段</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/rooms/time/delete">刪除時段</a>
            </li>
            <hr>

            <div class="button-wrapper">
              {{#if isAuth}}
                <span>歡迎回家，{{ user }}！</span>
                <li class="nav-item">
                  <a class="btn btn-outline-dark" href="/log-out">登出</a>
                </li>
              {{/if}}
            </div>
          </ul>
        </div>
      </div>
    </nav>
  {{/with}}

  {{{ body }}}

  <!-- Bootstrap core JavaScript -->
  <script src="/bootstrap5.0/js/bootstrap.min.js"></script>

  {{{ block 'scripts' }}}
  <script src="/js/loader.js"></script>
</body>
</html>