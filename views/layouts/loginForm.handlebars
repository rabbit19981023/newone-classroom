<!doctype html>
<html>
<head>
  <title>{{{ block 'loginOrSignUp' }}}</title>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap core CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
  <link href="/css/loginForm.css" rel="stylesheet">

</head>

<body class="text-center">
  {{{ test }}}

  <h1 class="mb-3 fw-normal {{ block 'h1-class' }}">{{{ block 'loginOrSignUp' }}}</h1>

  <main class="form">
    <form action="{{{ block 'formPath' }}}" method="POST">
      {{#if signUp}}
        <input type="text" id="inputUser" name="user" class="form-control" placeholder="您的名字" minlength="2" maxlength="4" required>
      {{/if}}

      <input type="text" id="inputUsername" name="username" class="form-control" placeholder="您的帳號" minlength="5" maxlength="20" required>
      <input type="password" id="inputPassword" name="password" class="form-control" placeholder="您的密碼" minlength="8" maxlength="25" required>
      
      {{#if message}}
        <span class="text-danger fw-bold">{{ message }}</span>
        <br>
      {{/if}}
      
      <input type="checkbox" onclick="displayPassword()">顯示密碼
      
      {{#if login}}
        <button class="w-75 btn btn-lg btn-primary" type="submit">登入</button>
      {{/if}}
      
      {{#if signUp}}
        <button class="w-75 btn btn-lg btn-primary" type="submit">註冊</button>
      {{/if}}
    </form>
  </main>

  <p class="mt-5 mb-3 text-muted">&copy; Copyright 2020-2021 by NewOne靈糧堂. All Rights Reserved. </p>

  <script src="/js/loginForm.js"></script>
</body>
</html>