<!doctype html>
<html>
<head>
  <title>{{{ block 'title' }}}</title>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap core CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
  <link href="/css/loginForm.css" rel="stylesheet">

</head>

<body class="text-center">
  {{#with data}}
    <div class="wrapper">
      <h1 class="fw-normal {{ block 'h1-class' }}">{{{ block 'title' }}}</h1>

      <main class="form">
        <form action="{{{ block 'formPath' }}}" method="POST">
          {{#if isSignUp}}
            <input type="text" id="inputUser" name="user" class="form-control" placeholder="您的名字" minlength="2" maxlength="4" required>
          {{/if}}

          <input type="text" id="inputUsername" name="username" class="form-control" placeholder="您的帳號" minlength="5" maxlength="20" required>
          <input type="password" id="inputPassword" name="password" class="form-control" placeholder="您的密碼" minlength="8" maxlength="25" required>
          
          {{#if message}}
            <span class="text-danger fw-bold">{{ message }}</span>
            <br>
          {{/if}}
          
          <input type="checkbox" id="display-password">
          <label for="display-password">顯示密碼</label>
          
          {{#if isLogin}}
            <button class="mb-4 w-75 btn btn-lg btn-primary" type="submit">登入</button>
            {{#if isUser}}
              <br>
              <span>還沒有帳號嗎？這裡可以 <a href="/sign-up">註冊</a></span>
            {{/if}}
          {{/if}}
          
          {{#if isSignUp}}
            <button class="mb-4 w-75 btn btn-lg btn-success" type="submit">註冊</button>
            {{#if isUser}}
              <br>
              <span>已經有帳號了嗎？這裡可以 <a href="/login">登入</a></span>
            {{/if}}
          {{/if}}
        </form>
      </main>
    </div>
  {{/with}}

  <p class="mt-5 mb-3 text-muted">&copy; Copyright 2020-2021 by NewOne靈糧堂. All Rights Reserved. </p>

  <script src="/js/displayPassword.js"></script>
</body>
</html>